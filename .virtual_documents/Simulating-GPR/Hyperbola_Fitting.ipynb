import numpy as np
import cv2
import os
import matplotlib.cm as cm

def save_array_as_video(frames, filename, fps=10, cmap='viridis', normalize=True):
    frames = np.array(frames)
    n_frames, height, width = frames.shape

    # Normalize to 0–1 for colormapping
    if normalize:
        fmin, fmax = frames.min(), frames.max()
        frames = (frames - fmin) / (fmax - fmin + 1e-9)
    frames = np.clip(frames, 0, 1)

    # Apply colormap
    cmap_func = cm.get_cmap(cmap)
    colored_frames = (cmap_func(frames)[..., :3] * 255).astype(np.uint8)  # Drop alpha channel

    # Choose codec based on extension
    ext = os.path.splitext(filename)[1].lower()
    if ext == '.mp4':
        fourcc = cv2.VideoWriter_fourcc(*'mp4v')
    elif ext == '.avi':
        fourcc = cv2.VideoWriter_fourcc(*'XVID')
    else:
        raise ValueError("Unsupported video format. Use .mp4 or .avi")

    # Initialize video writer
    out = cv2.VideoWriter(filename, fourcc, fps, (width, height))
    if not out.isOpened():
        raise ValueError(f"Could not open {filename} for writing. "
                         f"Check codec support for {ext} on your system.")

    # Write all frames
    for frame in colored_frames:
        frame_bgr = cv2.cvtColor(frame, cv2.COLOR_RGB2BGR)
        out.write(frame_bgr)

    out.release()
    print(f"✅ Video saved to {filename}")


